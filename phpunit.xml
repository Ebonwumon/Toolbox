<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="Package Test Suite">
            <directory suffix=".php">./tests/</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src/</directory>
            <exclude>
                <file>src/DataManagement/Repositories/ActiveRepository.php</file>
                <file>src/DataManagement/Validation/Validator.php</file>
                <file>src/DataManagement/Validation/NullValidator.php</file>
                <file>src/FrameworkIntegration/Laravel/ToolboxServiceProvider.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
